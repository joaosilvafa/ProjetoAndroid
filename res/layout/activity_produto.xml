<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/textProdutosDetalhes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="125dp"
        android:layout_marginTop="0dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imgProdutoDetalhes"
        android:layout_width="120dp"
        android:layout_height="120dp" />

    <TextView
        android:id="@+id/precoMaxDtlText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="125dp"
        android:layout_marginTop="50dp"
        android:text="A partir de:" />

    <TextView
        android:id="@+id/precominDtlText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:layout_marginLeft="125dp"
        android:layout_marginTop="70dp"
        android:text="Até:" />

    <TextView
        android:id="@+id/precoMaxDtl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_marginLeft="200dp"
        android:layout_marginTop="50dp" />

    <TextView
        android:id="@+id/precoMinDtl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="155dp"
        android:layout_marginTop="70dp" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imgProdutoDetalhes"
        android:layout_below="@+id/imgProdutoDetalhes"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="19dp"
        android:text="Adicionar produto à lista de busca automatica:" />

    <EditText
        android:id="@+id/edtHoras"
        android:layout_width="80dp"
        android:onClick="onClear"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/button1"
        android:layout_alignBottom="@+id/button1"
        android:layout_alignLeft="@+id/textView1"
        android:ems="10"
        android:inputType="number"
        android:text="Em horas"
        android:textSize="12dp" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/button1"
        android:layout_width="70dp"
        android:onClick="onClick"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/precominDtlText"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="14dp"
        android:text="Ok"
        android:textSize="12dp" />

</RelativeLayout>